<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sendMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/row_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="send Message goes here"/>


    <TextView
        android:id="@+id/receiveMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendMessage"
        android:drawableLeft="@drawable/row_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="receive message goes here" />

</androidx.constraintlayout.widget.ConstraintLayout>